<h2>Create a New Family</h2>
<%= form_with url: "/families", method: :post, local: true do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :family_name, { class: "form-label"} %>
        <%= f.text_field :family_name, { class: "form-control", placeholder: "Edwin" } %>
      </div>
      <div class="mb-3">
        <%= f.label :family_description, { class: "form-label"} %>
        <%= f.text_field :family_description, { class: "form-control", placeholder: "A fine and noble family with roots in Staten Island" } %>
      </div>
      <%= f.submit "Create Family", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
